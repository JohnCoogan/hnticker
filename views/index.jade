extends layout

block body
  .container-fluid
    .row-fluid
      h1 HN TickerTape
      h3 New Headlines
    div.photobanner(ng-controller='AppCtrl')
      .ticker-item(ng-repeat='message in newest', ng-cloak)
        .object-span
          a(ng-href='{{message.url}}', target="_blank")
            p.tickerText {{message.text}} {{message.domain}}
    div.photobanner.two(ng-controller='AppCtrl')
      .ticker-item.two(ng-repeat='message in topStories', ng-cloak)
        .object-span
          a(ng-href='{{message.url}}', target="_blank")
            p.tickerText(ng-class="message.styling")
              i.tickerIcon(class="icon-{{message.styling}}")
              {{message.text}} {{message.domain}}

  script(src='js/lib/angular/angular.js')
  script(src='js/lib/underscore-min.js')
  script(src='/socket.io/socket.io.js')
  script(src='js/app.js')
  script(src='js/services.js')
  script(src='js/controllers.js')
  script(src='js/filters.js')
  script(src='js/directives.js')
